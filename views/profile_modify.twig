{% extends '_layout.twig' %}

{% set title = 'Modifier mon profile | Los Gustos' %}


{% block content %}
<main id="profile" class="login">
  <section class="section">
    <div class="container">
      <a href="logout">Deconnection</a>
      <h1 class="upper is-size-2 has-text-centered bold mg-b7">profil</h1>
      <form class="" method="post">
        <input type="text" name="firstname" value="{{ firstName }}">
        <input type="text" name="lastname" value="{{ lastName }}">
        <input type="text" name="email" value="{{ email }}">
        <input type="text" name="adress" value="{{ adress }}">
        <input type="text" name="postal" value="{{ postal }}">
        <input type="text" name="city" value="{{ city }}">
        <input type="submit" class="btn mainbtn upper bold" name="" value="valider">
        <a href="/profile" class="has-text-centered bold upper block">Annuler</a>
      </form>
    </div>
  </section>
</main>
{% endblock %}
